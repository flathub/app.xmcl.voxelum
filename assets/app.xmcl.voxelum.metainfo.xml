<?xml version="1.0" encoding="UTF-8" ?>
<component type="desktop-application">
  <!-- Use reverse-DNS convention for ID -->
  <id>app.xmcl.voxelum</id>
  <name>X-Minecraft Launcher</name>
  <summary>A modern Minecraft launcher with modpack support</summary>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>
  <developer_name>Voxelum</developer_name>

  <url type="homepage">https://xmcl.app/ </url>
  <url
    type="bugtracker"
  >https://github.com/Voxelum/x-minecraft-launcher/issues </url>
  <url type="help">https://github.com/Voxelum/x-minecraft-launcher/wiki </url>

  <description>
    <p>
      X-Minecraft Launcher (XMCL) is a feature-rich Minecraft launcher that lets you manage resources like modpacks, resource packs, mods, and shader packs. It integrates with Minecraft Forge, Fabric, Quilt, CurseForge, and Modrinth.
    </p>
    <p>Key features:</p>
    <ul>
      <li>Multi-instance management</li>
      <li>Mod installation from CurseForge and Modrinth</li>
      <li>Support for Forge, Fabric, and Quilt mod loaders</li>
      <li>Resource pack and shader pack management</li>
      <li>Multi-account support (Microsoft/Mojang/3rd-party)</li>
      <li>Peer-to-peer multiplayer hosting</li>
    </ul>
  </description>

  <launchable type="desktop-id">app.xmcl.voxelum.desktop</launchable>

  <screenshots>
    <screenshot type="default">
      <caption>Main interface showing instance management</caption>
      <image
      >https://raw.githubusercontent.com/Voxelum/xmcl-page/refs/heads/master/src/assets/store-installed.png </image>
    </screenshot>
    <screenshot>
      <caption>Modpack browser with CurseForge integration</caption>
      <image
      >https://raw.githubusercontent.com/Voxelum/xmcl-page/refs/heads/master/src/assets/store.png </image>
    </screenshot>
  </screenshots>

  <!-- Update version/date with latest release -->
  <releases>
    <release version="0.50.5" date="2025-05-03">
      <description>
        <p
        >Latest stable release with performance improvements and bug fixes.</p>
      </description>
    </release>
  </releases>

  <!-- Content ratings based on typical Minecraft launcher needs -->
  <content_rating type="oars-1.1">
    <content_attribute id="violence-cartoon">moderate</content_attribute>
    <content_attribute id="violence-fantasy">moderate</content_attribute>
    <content_attribute id="social-chat">intense</content_attribute>
    <content_attribute id="social-info">mild</content_attribute>
    <content_attribute id="social-audio">intense</content_attribute>
  </content_rating>

  <!-- Categories for Flathub visibility -->
  <categories>
    <category>Game</category>
    <category>Utility</category>
  </categories>

  <!-- Search keywords -->
  <keywords>
    <keyword>Minecraft</keyword>
    <keyword>Launcher</keyword>
  </keywords>
</component>
